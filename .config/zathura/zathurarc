set selection-clipboard clipboard
set window-title-home-tilde true
set statusbar-home-tilde true
set adjust-open "best-fit"

set font "curie 10"
# Light/Default mode settings:
# 
#
set notification-error-bg       "#ac8a8c" # Red
set notification-error-fg       "#f8f8f2" # Foreground
set notification-warning-bg     "#c6a679" # Orange
set notification-warning-fg     "#191919" # Selection
set notification-bg             "#1c1c1c" # Background
set notification-fg             "#f8f8f2" # Foreground

set completion-bg               "#1c1c1c" # Background
set completion-fg               "#4c4c4c" # Comment
set completion-group-bg         "#1c1c1c" # Background
set completion-group-fg         "#4c4c4c" # Comment
set completion-highlight-bg     "#191919" # Selection
set completion-highlight-fg     "#f8f8f2" # Foreground

set index-bg                    "#1c1c1c" # Background
set index-fg                    "#f8f8f2" # Foreground
set index-active-bg             "#191919" # Current Line
set index-active-fg             "#f8f8f2" # Foreground

set inputbar-bg                 "#1c1c1c" # Background
set inputbar-fg                 "#f8f8f2" # Foreground
set statusbar-bg                "#1c1c1c" # Background
set statusbar-fg                "#f8f8f2" # Foreground

set highlight-color             "#8aac8b" # Orange
set highlight-active-color      "#aca98a" # Pink

set default-bg                  "#1c1c1c" # Background
set default-fg                  "#f8f8f2" # Foreground

set render-loading              true
set render-loading-fg           "#1c1c1c" # Background
set render-loading-bg           "#f8f8f2" # Foreground

# Recolor mode settings
#
#
set recolor-lightcolor          "#1c1c1c" # Background
set recolor-darkcolor           "#f8f8f2" # Foreground

# Startup options
#
#
set adjust-open width
set recolor true
map <C-Tab> toggle_statusbar
set guioptions ""
